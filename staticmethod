using System;

namespace ConsoleApp {
     class Program
    {
        static void Main(string[] args)
        {
         var sonuc=HelperMethod.KarakterDuzelt("ölçme ve değerlendirme");
         Console.WriteLine(sonuc);
      }
    }      
      class HelperMethod{
      public static string KarakterDuzelt(string str)//static methods
      {
         return
         str.Replace("ö","o")
         .Replace("ü","u")
         .Replace("ı","i")
         .Replace("ğ","g")
         .Replace("ç","c")
         .Replace(" ","-");
      }
     }
    }
    
